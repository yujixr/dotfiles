filetype plugin indent on

" Encoding
set encoding=utf-8
set fileencoding=utf-8
scriptencoding utf-8

" Show settings
syntax on
set number
set title
set showmatch
set showcmd

" Input settings

set expandtab
set shiftwidth=2
set softtabstop=2
set tabstop=2
set smartindent

" Search config
set ignorecase
set smartcase
set wrapscan
set incsearch
set hlsearch
